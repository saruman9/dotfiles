{{- $pc_loc := promptString "PC location (work, desktop, laptop, other)" -}}
{{- $pass := promptString "pass installed (y/n)" -}}
color = "on"
encryption = "gpg"

[data]
pc_loc = "{{- $pc_loc -}}"
pass = "{{- $pass -}}"

[gpg]
recipient = "27B49A4ADC4B469DC8F2BDD91769FEA6B860FF90"

{{ if eq $pass "y" -}}
[secret]
command = "pass"
{{- end }}

[merge]
command = "nvim"
args = ["-d", "{{ "{{" }} .Destination {{ "}}" }}", "{{ "{{" }} .Source {{ "}}" }}", "{{ "{{" }} .Target {{ "}}" }}"]

[diff]
pager = "delta"
